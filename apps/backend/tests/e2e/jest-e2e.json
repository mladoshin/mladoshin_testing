{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src(.*)$": "<rootDir>/src$1",
    "^@components(.*)$": "<rootDir>/shared/components$1"
  },
  "moduleDirectories": ["node_modules", "<rootDir>/src"],
  "testTimeout": 30000
}
