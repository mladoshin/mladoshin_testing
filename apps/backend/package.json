{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "pg:update-function": "export $(grep -v '^#' .env | xargs) && ./scripts/update_pg_function.sh",
    "pg:update-test-function": "export $(grep -v '^#' .env.test | xargs) && ./scripts/update_pg_function.sh",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=test nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",

    "migration:generate": "typeorm-ts-node-commonjs -d src/database/data-source.ts migration:generate",
    "migration:run": "typeorm-ts-node-commonjs -d src/database/data-source.ts migration:run",
    "migration:revert": "typeorm-ts-node-commonjs -d src/database/data-source.ts migration:revert",
    "seed:run": "ts-node -r tsconfig-paths/register src/database/seeds/seed.ts",

    "test:parallel": "jest --maxWorkers=4",
    "test:sequential": "jest --runInBand",
    "test:parallel:random": "jest --maxWorkers=4 --config jest.config.random.ts",
    "test:sequential:random": "jest --runInBand --config jest.config.random.ts",

    "test:unit": "jest --config=./configs/jest-unit.config.ts",
    "test:integration": "jest --config=./configs/jest-integration.config.ts",
    "test:e2e": "jest --config=./configs/jest-e2e.config.ts",

    "docker:build": "docker-compose -f docker-compose.test.yml build",
    "docker:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:down": "docker-compose -f docker-compose.test.yml down -v",
    "docker:logs": "docker-compose -f docker-compose.test.yml logs -f",

    "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit --exit-code-from test-runner",
    "docker:test:backend-only": "docker-compose -f docker-compose.test.yml up backend-test",
    "docker:test:unit": "docker-compose -f docker-compose.test.yml run --rm test-runner pnpm run test:unit",
    "docker:test:integration": "docker-compose -f docker-compose.test.yml run --rm test-runner pnpm run test:integration",
    "docker:test:e2e": "docker-compose -f docker-compose.test.yml run --rm test-runner pnpm run test:e2e",
    "docker:test:parallel": "docker-compose -f docker-compose.test.yml run --rm test-runner pnpm run test:parallel",
    "docker:test:sequential": "docker-compose -f docker-compose.test.yml run --rm test-runner pnpm run test:sequential",

    "docker:local:build": "docker-compose -f docker-compose.local.test.yml build",
    "docker:local:up": "docker-compose -f docker-compose.local.test.yml up -d",
    "docker:local:down": "docker-compose -f docker-compose.local.test.yml down -v",
    "docker:local:restart": "pnpm docker:local:down && pnpm docker:local:build && pnpm docker:local:up",
    "docker:local:logs": "docker-compose -f docker-compose.local.test.yml logs -f",
    "docker:local:test:unit": "docker-compose -f docker-compose.local.test.yml run --rm test-runner pnpm run test:unit",
    "docker:local:test:integration": "docker-compose -f docker-compose.local.test.yml run --rm test-runner pnpm run test:integration",
    "docker:local:test:e2e": "docker-compose -f docker-compose.local.test.yml run --rm test-runner pnpm run test:e2e",
    "docker:local:reset-db": "docker-compose -f docker-compose.local.test.yml exec backend-test sh ./scripts/reset-db.sh",
    "docker:local:start-runners": "./tests/scripts/start-runners.sh",
    "docker:local:run-test": "./tests/scripts/run-test.sh",

    "docker:test:allure": "docker-compose -f docker-compose.test.yml run --rm test-runner sh -c 'pnpm run test && pnpm run allure:append'",
    "docker:reset-db": "docker-compose -f docker-compose.test.yml exec backend-test sh ./scripts/reset-db.sh",
    "docker:shell": "docker-compose -f docker-compose.test.yml run --rm test-runner sh",
    "docker:backend:shell": "docker-compose -f docker-compose.test.yml exec backend-test sh",

    "test": "npm run allure:prepare && jest && npm run allure:append && npm run allure:show",
    "allure:clean": "rm -rf allure-results allure-report && mkdir -p allure-results allure-report",
    "allure:prepare": "rm -rf allure-results/history && cp -r allure-report/history allure-results/history 2>/dev/null || true",
    "allure:append": "allure generate allure-results -o allure-report --clean",
    "allure:rewrite": "rm -rf allure-results allure-report && allure generate allure-results -o allure-report --clean",
    "allure:show": "allure open allure-report",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "console": "tsx --tsconfig tsconfig.json src/main.console.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "@shared/types": "workspace:*",
    "axios": "^1.7.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "commander": "^13.1.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.0",
    "jsonwebtoken": "^9.0.2",
    "nest-commander": "^3.17.0",
    "pg": "^8.15.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.22",
    "uuid": "8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@jest/test-result": "^30.2.0",
    "@jest/test-sequencer": "^30.2.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.12",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/axios": "^0.14.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "allure-jest": "^3.4.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.3.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.20.0"
  }
}
